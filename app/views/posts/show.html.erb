<h1><%= @post.title %></h1>

<p><%= @post.content %></p>

<h3>Add Comment</h3>
<%= form_for([@post, @post.comments.build]) do |f| %>

  <!--builds infor for a comment and calls comments#create action -->
  <p>
    <%= f.label :commenter %>
    <br>
    <%= f.text_field :commenter %>
  </p>
  <%= f.label :content %>
  <br>
  <%= f.text_area :content %>
  <button><%= f.submit "COMMENT" %></button>

<% end %>

<%= link_to 'Back to Posts', posts_path %>
<br>
<%= link_to 'add New', new_post_path %>
