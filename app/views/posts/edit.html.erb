<h1>EDIT</h1>
<!-- form sends post request to to posts_path route -->
<%= form_for :post, url: posts_path(@post), method: :patch do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </p>

  <p>
    <!-- on submit, posts#create action is triggered -->
    <%= f.submit "Submit" %>
  </p>
<% end %>

<br>

<%= link_to 'Back to Posts', posts_path %>
